  <title translate="true">Inserting Tables</title>
  <keywords>
    <keyword translate="true">inserting tables</keyword>
    <keyword translate="true">styles<keyword translate="true">table styles</keyword></keyword>
    <keyword translate="true">table styles</keyword>
