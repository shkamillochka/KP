label5.Caption:='САМЫЙ ПОПУЛЯРНЫЙ' +#13+ '              ТРЕК';
end;

procedure TForm4.SpeedButton1Click(Sender: TObject);
begin
form3.show;
form4.hide;
end;

procedure TForm4.SpeedButton2Click(Sender: TObject);
begin
form5.show;
form4.hide;
end;

procedure TForm4.SpeedButton3Click(Sender: TObject);
begin
form4.hide;
form2.show;
end;

end.
