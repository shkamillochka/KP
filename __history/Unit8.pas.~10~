procedure TForm8.FormClose(Sender: TObject; var Action: TCloseAction);
begin
Mediaplayer1.Stop;
end;

procedure TForm8.N1Click(Sender: TObject);
begin
ShellExecute(0, PChar ('Open'), PChar ('Справка.chm'), nil, nil, SW_SHOW);
end;

procedure TForm8.SpeedButton1Click(Sender: TObject);
begin
form8.hide;
form7.show;
end;

procedure TForm8.SpeedButton2Click(Sender: TObject);
begin
form8.hide;
form9.show;
end;

procedure TForm8.SpeedButton3Click(Sender: TObject);
begin
form8.hide;
form2.showmodal;
end;

procedure TForm8.SpeedButton4Click(Sender: TObject);
begin
  MediaPlayer1.Open;
  MediaPlayer1.Play;
end;

